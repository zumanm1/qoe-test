{
  "name": "qoe-tool-tests",
  "version": "1.0.0",
  "description": "Puppeteer MCP test suite for QoE Tool",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "keywords": [
    "puppeteer",
    "testing",
    "e2e",
    "qoe",
    "mcp"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "puppeteer": "^21.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-puppeteer": "^9.0.0"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testMatch": [
      "**/tests/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  }
}
