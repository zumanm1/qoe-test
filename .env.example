# Flask Configuration
FLASK_ENV=development
FLASK_APP=run.py
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/qoe_tool
# For development: sqlite:///Mobile_qoe.db
# For production: postgresql://user:pass@db:5432/qoe_tool

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Settings
SESSION_COOKIE_SECURE=false
REMEMBER_COOKIE_SECURE=false

# Logging
LOG_LEVEL=INFO
LOG_TO_STDOUT=true

# Application Settings
ITEMS_PER_PAGE=20
MAX_SEARCH_RESULTS=100
KPI_UPDATE_INTERVAL=1
ALERT_CHECK_INTERVAL=60

# External Service URLs (if applicable)
API_BASE_URL=https://api.example.com
MONITORING_URL=https://monitoring.example.com

# Email Configuration (if needed)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Docker/Deployment specific
WORKERS=4
MAX_WORKERS=8
TIMEOUT=30
KEEPALIVE=2
